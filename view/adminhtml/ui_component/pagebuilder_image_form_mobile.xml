<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_image_form">
<argument name="data" xsi:type="array">
    <item name="js_config" xsi:type="array">
        <item name="provider" xsi:type="string">pagebuilder_image_form_mobile.pagebuilder_image_form_mobile_data_source</item>
    </item>
    <item name="label" xsi:type="string" translate="true">Image</item>
</argument>
<settings>
    <deps>
        <dep>pagebuilder_image_form_mobile.pagebuilder_image_form_mobile_data_source</dep>
    </deps>
    <namespace>pagebuilder_image_form_mobile</namespace>
</settings>
<dataSource name="pagebuilder_image_form_mobile_data_source">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
        </item>
    </argument>
    <dataProvider name="pagebuilder_image_form_mobile_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
        <settings>
            <requestFieldName/>
            <primaryFieldName/>
        </settings>
    </dataProvider>
</dataSource>
<fieldset name="general">
    <field name="aspect_ratio_select_mobile_field" sortOrder="19" formElement="select">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="default" xsi:type="string">disabled</item>
            </item>
        </argument>
        <settings>
            <dataType>text</dataType>
            <label translate="true">Enable Aspect Ratio (Mobile)</label>
            <dataScope>aspect_ratio_select_mobile_field</dataScope>
        </settings>
        <formElements>
            <select>
                <settings>
                    <options>
                        <option name="0" xsi:type="array">
                            <item name="value" xsi:type="string">enabled</item>
                            <item name="label" xsi:type="string" translate="true">Enable</item>
                        </option>
                        <option name="1" xsi:type="array">
                            <item name="value" xsi:type="string">disabled</item>
                            <item name="label" xsi:type="string" translate="true">Disable</item>
                        </option>
                    </options>
                </settings>
            </select>
        </formElements>
    </field>
    <field name="image_aspect_ratio" sortOrder="20" formElement="input">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="disabledValues" xsi:type="array">
                    <item name="none" xsi:type="string">disabled</item>
                </item>
                <item name="breakpoints" xsi:type="array">
                    <item name="mobile" xsi:type="boolean">true</item>
                </item>
            </item>
        </argument>
        <settings>
            <label translate="true">Aspect Ratio Mobile (num/num)</label>
            <notice translate="true">Sets the aspect ratio for the image.</notice>
            <additionalClasses>
                <class name="admin__field-small">true</class>
            </additionalClasses>
            <addAfter translate="true">1/2</addAfter>
            <tooltip>
                <description translate="true">
                    <![CDATA[
                        <p>Style changes will only affect this breakpoint - Change view to adjust for Mobile</p>
                        ]]>
                </description>
            </tooltip>
            <imports>
                <link name="setDisabled">ns = ${ $.ns }, index = aspect_ratio_select_mobile_field:value</link>
            </imports>
        </settings>
    </field>
    <field name="image_width" sortOrder="21" formElement="input">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="disabledValues" xsi:type="array">
                    <item name="none" xsi:type="string">enabled</item>
                </item>
                <item name="breakpoints" xsi:type="array">
                    <item name="mobile" xsi:type="boolean">true</item>
                </item>
                <item name="default" xsi:type="string">100%</item>
            </item>
        </argument>
        <settings>
            <label translate="true">Image Width Mobile (px / %)</label>
            <notice translate="true">Sets the width for the image.</notice>
            <additionalClasses>
                <class name="admin__field-small">true</class>
            </additionalClasses>
            <tooltip>
                <description translate="true">
                    <![CDATA[
                        <p>Style changes will only affect this breakpoint - Change view to adjust for Mobile</p>
                        ]]>
                </description>
            </tooltip>
            <imports>
                <link name="setDisabled">ns = ${ $.ns }, index = aspect_ratio_select_mobile_field:value</link>
            </imports>
        </settings>
    </field>
    <field name="image_height" sortOrder="22" formElement="input">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="disabledValues" xsi:type="array">
                    <item name="none" xsi:type="string">enabled</item>
                </item>
                <item name="breakpoints" xsi:type="array">
                    <item name="mobile" xsi:type="boolean">true</item>
                </item>
                <item name="default" xsi:type="string">auto</item>
            </item>
        </argument>
        <settings>
            <label translate="true">Image Height Mobile (px)</label>
            <notice translate="true">Sets the height for the image.</notice>
            <additionalClasses>
                <class name="admin__field-small">true</class>
            </additionalClasses>
            <tooltip>
                <description translate="true">
                    <![CDATA[
                        <p>Style changes will only affect this breakpoint - Change view to adjust for Desktop</p>
                        ]]>
                </description>
            </tooltip>
            <imports>
                <link name="setDisabled">ns = ${ $.ns }, index = aspect_ratio_select_mobile_field:value</link>
            </imports>
        </settings>
    </field>
</fieldset>
</form>

